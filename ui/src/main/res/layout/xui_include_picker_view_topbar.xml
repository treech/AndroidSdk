<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picker_view_bg_topbar">

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/xui_config_color_transparent"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/picker_view_topbar_padding"
        android:text="@string/xui_picker_view_cancel"
        android:textColor="?attr/colorAccent"
        android:textSize="?attr/md_button_textsize" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnSubmit"
        android:layout_toEndOf="@+id/btnCancel"
        android:gravity="center"
        android:textColor="?attr/xui_config_color_title_text"
        android:textSize="?attr/xui_config_size_title_text" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/xui_config_color_transparent"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/picker_view_topbar_padding"
        android:text="@string/xui_picker_view_submit"
        android:textColor="?attr/colorAccent"
        android:textSize="?attr/md_button_textsize" />

</RelativeLayout>
